{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build my project (macOS)",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "/Users/aninoss/Documents/boost/testing/include",
                "-L",
                "/Users/aninoss/Documents/boost/testing/lib",
                "-l",
                "boost_random",
                "-l",
                "boost_filesystem",
                "-l",
                "boost_system",
                "-l",
                "boost_thread",
                "-std=c++17"
            ],
            "group": "build",
            "options": {
                "osx": ["darwin"]
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "osx": ["darwin"]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",

        },
        {
            "label": "build my project (Windows)",
            "type": "shell",
            "command": "cl",
            "args": [
                "/EHsc",
                "${file}",
                "/I",
                "D:\\CL\\boost", // Replace with the actual path on your Windows machine
                "/link",
                "/LIBPATH:D:\\CL\\boost\\stage\\lib", // Replace with the actual path on your Windows machine
                "libboost_random-vc143-mt-x64-1_84.lib",
                "libboost_filesystem-vc143-mt-x64-1_84.lib",
                "libboost_system-vc143-mt-x64-1_84.lib",
                "libboost_thread-vc143-mt-x64-1_84.lib",
                "/out:${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": "build",
            "options": {
                "windows": true
            }
        }
        
    ],
	"group": {
        "kind": "build",
        "isDefault": true
    }
}